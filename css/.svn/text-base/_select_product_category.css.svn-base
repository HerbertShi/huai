@charset "utf-8";
#spc_mask {
	background-color:#ccc;
	position:absolute;
	-moz-opacity:0.65;
	filter:Alpha(Opacity=65);
	z-index:100;
}
#spc_hidden_div {
	background-color:#fff;
	z-index:100;
	position:absolute;
	border:#ccf 1px solid;
	text-align:left;
	width:950px;
	padding:10px;
}
#spc_category_selector {
	clear:both; 
	width:950px; 
	height:279px; 
	background-color: #fff;
	margin:5px;
	margin-bottom:12px;
}
#spc_category_selector ul {
	border: #ccc 1px solid;
	padding:0;
	float: left;
	margin: 0 2px 0 0; 
	overflow: auto; 
	width: 180px;
	height: 277px;
	list-style:none;
}
#spc_category_selector li {
	padding: 0; 
	margin:0; 
	overflow: hidden;  
	width: 156px!important; 
	cursor: pointer; 
	color: #444; 
	text-indent: 3px; 
	line-height: 20px; 
	height: 20px;
	line-height:140%;
}
#spc_category_selector li input{
	margin-right:2px;
}
#spc_category_selector ul.blank {
	background-color:#eee;
}
#spc_category_selector li.isFather {
	background:url(../images/arrow.gif) no-repeat 99% 5px;
	font-weight:bold;
}
#spc_hidden_div span{
	margin-left:5px;
}
#spc_list_selected_category, #spc_add_selected_category{
	padding-left:5px;
	margin-bottom:22px;
	margin-top:0;
}
#spc_list_selected_category ul{
	list-style:none;
}
#spc_add_selected_category{
	margin-bottom:10px;
}
#spc_add_selected_category ul {
	list-style:none;
	width:800px;
	border-bottom:1px dashed #AAAAAA;
	margin-bottom:5px;
}
#spc_add_selected_category li {
	float:left;
	width:650px;
	padding-top:4px;
	margin-top:5px;
}
#cate_sel{

	margin-bottom:10px;
}

*html #cate_sel{
	margin-right:0px;
}
.category_selector_tip{
	font-size:13px;
	line-height:20px;
	color:#006;
	text-indent:0.4em;
	font-weight:bold;
}
.cate_title{
	margin-bottom:5px;
	margin-top:8px;
	line-height:15px;
	height:15px;
	padding-top:3px;
	color:#666;
	font-size:13px;
	letter-spacing:1px;
}
.add_bt{
	margin-top:3px;
}
